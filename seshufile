pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git credentialsId: 'github-creds', url: 'https://github.com/seshuadi969/project_git.git', branch: 'future'
            
}
        }

        stage('Build Docker Image') {
            steps {
                script {
                    writeFile file: 'Dockerfile', text: '''
FROM nginx:alpine
COPY . /usr/share/nginx/html
                    '''
                    sh 'docker build -t html-site .'
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    sh '''
                        docker rm -f html_container || true
                        docker run -d -p 8082:80 --name html_container html-site
                    '''
                }
            }
        }
    }
}


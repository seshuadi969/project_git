pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/seshuadi969/Borderless-Gaming.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t borderless-gaming .'
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh 'docker run -d -p 8080:5000 --name borderless-gaming borderless-gaming'
                }
            }
        }
    }
}

